{% extends "layout.html.twig" %}

{% block content %}

    <div class="row justify-content-md-center align-items-center h-100">
        <div class="card-wrapper">
            <div class="brand">
                <img src="{{ url }}/assets/auth/img/rudra.png" alt="logo">
            </div>
            <div class="card fat">
                <div class="card-body">
                    <h4 class="card-title">{{ brand }}</h4>
                    <form method="POST" class="my-login-validation" novalidate="" action="{{ url }}/reset">
                        {{ csrf_field() | raw}}
                        <div class="form-group">
                            <input type="hidden" value="{{ email }}" name="email">
                            <input type="hidden" value="{{ hash }}" name="hash">
                            <label for="new-password">Новый пароль</label>
                            <input id="new-password" type="password" class="form-control" name="password" required
                                   autofocus data-eye>
                            <div class="invalid-feedback">
                                Необходим пароль
                            </div>
                            <div class="form-text text-muted">
                                Создайте крепкий, но легкий для запоминания пароль
                            </div>
                        </div>
                        {{ alert('main', 'warning') | raw }}
                        {{ alert('email', 'warning') | raw }}
                        {{ alert('password', 'warning') | raw }}
                        {{ alert('success', 'success') | raw }}
                        <div class="form-group m-0">
                            <button type="submit" class="btn btn-primary btn-block">
                                Сбросить пароль
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="footer">
                Copyright &copy; 2018 &mdash; Коротков Данила
            </div>
        </div>
    </div>

{% endblock %}